doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Formulario
        
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    body(class="p-0 m-0")
        p(class="text-center display-1 fw-bolder") Bienvenido al CRUD 

        div(class="d-flex justify-content-center")
            form(class="row row-cols-lg-auto g-3 align-items-center mb-4", action="/tasks/add", method="POST")
                div(class="col-12")
                    input(type="text", class="form-control", name="task", placeholder="Tarea", required)
                div(class="col-12")
                    input(type="text", class="form-control", name="encargado", placeholder="Encargado", required)
                div(class="col-12")
                    input(type="date", class="form-control", name="fecha", required)

                div(class="col-12")
                    select(class="form-select", name="estado")
                        option(value="Pendiente") Pendiente
                        option(value="En curso") En curso
                        option(value="Completada") Completada
                div(class="col-12")
                    button(type="submit", class="btn btn-primary") Submit


        div(class="container-fluid row mx-0")
            each task in tasks
                div(class="col-4")
                    div(class="card mb-4")
                        div(class="card-body")
                            h5(class="card-title")= task.id_tarea + ' ~ ' + task.nombre_tarea
                            br
                            footer(class="blockquote-footer")= task.encargado_tarea
                            h6(class="card-subtitle mb-2 text-body-secondary")= task.estado_tarea
                            div(class="row justify-content-between")
                                div(class="col-6")
                                    a(href="/tasks/search/" + task.id_tarea, class="card-link") Edit
                                    a(href="/tasks/del/" + task.id_tarea, class="card-link") Delete
                                div(class="col-6")
                                    p(class="card-text text-end")= String(task.fecha_entrega_tarea).slice(0,15)

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
