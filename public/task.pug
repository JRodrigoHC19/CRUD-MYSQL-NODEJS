doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Formulario
        
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
    body(class="p-0 pt-5 mx-0 mt-5")
        each task in tasks
            p(class="text-center display-1 fw-bolder")= 'Tarea ' + task.id_tarea

            div(class="d-flex justify-content-center")
                form(class="row row-cols-lg-auto g-3 align-items-center mb-4", action="/tasks/set/" + task.id_tarea, method="POST")
                    div(class="col-12")
                        input(type="text", class="form-control", name="task", placeholder="Tarea", value=task.nombre_tarea, required)
                    div(class="col-12")
                        input(type="text", class="form-control", name="encargado", placeholder="Encargado", value=task.encargado_tarea, required)
                    div(class="col-12")
                        input(type="date", class="form-control", name="fecha", value=date, required)

                    div(class="col-12")
                        select(class="form-select", name="estado")
                            case task.estado_tarea
                                when "Pendiente"
                                    option(value="Pendiente", selected) Pendiente
                                    option(value="En curso") En curso
                                    option(value="Completada") Completada
                                    break
                                when "En curso"
                                    option(value="Pendiente") Pendiente
                                    option(value="En curso", selected) En curso
                                    option(value="Completada") Completada
                                    break
                                default
                                    option(value="Pendiente") Pendiente
                                    option(value="En curso") En curso
                                    option(value="Completada", selected) Completada

                    div(class="col-12")
                        button(type="submit", class="btn btn-secondary") Actualizar
        
        p(class="text-center fw-bolder") 
            a(href="/",  class="btn btn-primary") Regresar

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
